<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %><br>
    <%= f.input :price %><br>
    <%= f.input :image, as: :file%><br>
    <%= f.input :category, :label => 'Category', :collection => ['Retail', 'Tech', 'Vehicles'] %><br>
    <%= f.input :description %><br>
    <%= f.input :quantity %><br>
    <%= f.input :rating, :label => 'Rating', :collection => [1,2,3,4,5] %><br>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
