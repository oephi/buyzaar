<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Feedback comment</th>
      <th>Feedback rating</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <!-- Add a condition to check if feedback is present with the method .present -->
        <% if order.feedback_comment.present? %>
          <td><%= order.feedback_comment %></td>
        <% else %>
          <td><%= link_to 'Leave Feedback', edit_order_path(order), class: "btn btn-primary" %></td>
        <% end %>
        <td><%= order.feedback_rating %></td>
        <td><%= order.buyer.profile.first_name %></td>
        <td><%= order.seller.profile.first_name %></td>
        <td><%= order.item.name%></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

